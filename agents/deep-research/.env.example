OPENAI_API_KEY=sk-...
OPENAI_BASE_URL=
LLM_MODEL=

TAVILY_API_KEY=tvly-...

# Optional: Langfuse Tracing
LANGFUSE_PUBLIC_KEY=pk-...
LANGFUSE_SECRET_KEY=sk-...
LANGFUSE_HOST=

# Optional: System Configuration
DEBUG=True
ENVIRONMENT=development

# 是否启用自动上下文管理（Auto-Context）
# 注意：启用后可能导致部分请求超时，建议根据实际需求选择开启
ENABLE_AUTO_CONTEXT=false
# 是否使用本地嵌入模型（Local Embeddings）
USE_LOCAL_EMBEDDINGS=true
# 可选，默认使用 moka-ai/m3e-base
LOCAL_EMBEDDING_MODEL=moka-ai/m3e-base
# Hugging Face 镜像（国内网络环境必需）
HF_ENDPOINT=https://hf-mirror.com